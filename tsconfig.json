{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"es6"
		],
		"module": "commonjs",
		"noImplicitReturns": true,
		"outDir": "dist",
		"sourceMap": true,
		"skipLibCheck": true,
		"jsx": "react",
		"esModuleInterop": true,
	},
	"compileOnSave": true,
	"skipLibCheck": true,
	"exclude": [
		"node_modules",
		"functions"
	],
	"include": [
		"entry-points/index.ts",
		"entry-points/defaults.ts",
		"entry-points/shapes-util.ts",
		"entry-points/color-util.ts"
	]
}